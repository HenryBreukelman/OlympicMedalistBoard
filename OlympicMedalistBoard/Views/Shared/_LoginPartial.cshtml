@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="dropup dropup-center">
    <a class="btn dropdown-toggle bi bi-person-fill m-0 pe-0 align-self-center" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
    <ul id="UserDropdown" class="user dropdown-menu" aria-labelledby="UserDropdown" style="left:50%; translateX:-50%;">
        @if (SignInManager.IsSignedIn(User))
        {
            <li><a class="dropdown-item" href="#">Hi, @UserManager.GetUserName(User)!</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                    <button type="submit" class="dropdown-item">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li>
                <a class="dropdown-item" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
            <li>
                <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
        }
    </ul>
</div>
