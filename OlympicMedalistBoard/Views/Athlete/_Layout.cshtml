<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OlympicMedalistBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OlympicMedalistBoard.styles.css" asp-append-version="true" />
    <partial name="_AthleteStyle.cshtml" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 p-4">
            <div class="container">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Product" asp-action="">Olympic Medalist Board</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
@*                     @if (User.Identity?.IsAuthenticated ?? false)
                    { *@
                        <div class="d-flex gap-5 mx-5">
                            <ul class="navbar-nav flex-grow-1 gap-4">

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="MedalDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Medal
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="MedalDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Medal" asp-action="">View All</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Medal" asp-action="Create">Add New</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="AthleteDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Athlete
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="AthleteDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Athlete" asp-action="">View All</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Athlete" asp-action="Create">Add New</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="SportDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Sport
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="SportDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Sport" asp-action="">View All</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Sport" asp-action="Create">Add New</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="CountryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Country
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="CountryDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Country" asp-action="">View All</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Country" asp-action="Create">Add New</a></li>
                                    </ul>
                                </li>

                            </ul>

                        </div>

                        <partial name="_LoginPartial" />
@*                     } *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-end">
            &copy; 2024 - Olympic Medalist Board
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
