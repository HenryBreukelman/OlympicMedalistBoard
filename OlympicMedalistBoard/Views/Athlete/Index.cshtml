@model IEnumerable<Athlete>

@{
    ViewBag.Title = "Index";
}

<a href="@Url.Action("Create")" class="btn btn-success bi bi-plus-lg">Create</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AthleteID)
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sport)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AthleteID)
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport.SportName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AthleteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AthleteID })
            </td>
        </tr>
    }
</table>