@model IEnumerable<AthleteViewModel>

@{
    ViewData["Title"] = "Athletes";
}

<div class="d-flex d-flex justify-content-center align-items-center position-relative pb-4" style="margin:0 0 40px 0">
    <h3 class="my-4 text-warning">@ViewData["Title"]</h3>
    <a href="@Url.Action("Create")" class="btn btn-outline-success position-absolute" style="bottom:-20px;"> + </a>
</div>
<table class="table ps-0">
    <thead>
        <tr class="p-3 d-flex mb-2 align-items-center bg-light">
            <th>
                <b>@Html.DisplayNameFor(model => model.AthleteID)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Name)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Country)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Sport)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Birthdate)</b>
            </th>
            <th>
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="p-3 d-flex align-items-center mb-2">
                <td>
                    <b>#@item.AthleteID</b>
                </td>
                <td class="d-flex justify-content-center">
                    <div class="photo border border-2 border-light">
                        <img src="@item.PhotoPath" alt="@item.Name" />
                        <div class="">@item.Name</div>
                    </div>
                </td>
                <td>
                    @item.Country.CountryName
                </td>
                <td>
                    @item.Sport.SportName
                </td>
                <td>
                    @item.Birthdate.ToString("dd/MM/yyyy")
                </td>
                <td class="btn-group">
                    <a href="@Url.Action("Edit",new{id=@item.AthleteID})" class="btn btn-outline-success bi bi-pencil"></a>
                    <a href="@Url.Action("Delete",new{id=@item.AthleteID})" class="btn btn-outline-danger bi bi-trash3"></a>
                </td>
            </tr>
        }
    </tbody>
</table>