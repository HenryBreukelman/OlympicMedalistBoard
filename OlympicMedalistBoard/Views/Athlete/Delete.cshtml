@model AthleteViewModel

<div class="d-flex d-flex justify-content-center align-items-center pb-4">
    <h3 class="my-4 text-danger">Delete Athlete</h3>
</div>

<div class="d-flex justify-content-center mb-3">
    <div class="col-2 form-photo position-relative border border-2 border-light p-1">
        <img src="@Model.PhotoPath" alt="" class="w-100" />
        <div class="text-center text-dark">@Model.Name</div>
    </div>
</div>

<h3 class="text-center">
    Are you sure you want to delete: @Model.Name?
</h3>

@using (Html.BeginForm("Delete", "Athlete", FormMethod.Post))
{
    <input type="hidden" asp-for="AthleteID" />
    <input type="hidden" asp-for="Name" />
    <div class="d-flex mt-5 justify-content-center">
        <button type="submit" class="btn btn-outline-danger sbtn">Delete</button>
        <a class="btn btn-outline-secondary sbtn mx-2" href="@Url.Action("Index")">Cancel</a>
    </div>
}
