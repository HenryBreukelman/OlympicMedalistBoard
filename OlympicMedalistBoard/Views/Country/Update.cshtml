@model OlympicMedalistBoard.Models.Country

<div class="d-flex d-flex justify-content-center align-items-center pb-4">
	<h3 class="my-4 text-danger">Countries</h3>
</div>

<div class="d-flex justify-content-center w-100">
	@using (Html.BeginForm("Update", "Country", FormMethod.Post, new { @class = "w-30" })) {
		<input type="hidden" asp-for="CountryID" />
		<input type="hidden" asp-for="Athletes" />
		<div class="mb-2">
			@Html.LabelFor(m => m.CountryName)
			@Html.TextBoxFor(m => m.CountryName, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.CountryName, "", new { @class = "text-danger" })
		</div>
		<div class="mb-2">
			@Html.LabelFor(m => m.CountryCode)
			@Html.TextBoxFor(m => m.CountryCode, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.CountryCode, "", new { @class = "text-danger" })
		</div>
		<div class="d-flex mt-5 justify-content-center">
			<button type="submit" class="btn btn-outline-success sbtn">Edit</button>
			<a class="btn btn-outline-secondary sbtn mx-2" href="@Url.Action("Index")">Cancel</a>
		</div>
	}
</div>
