@model OlympicMedalistBoard.Models.Medal

<h2>Edit Medal</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Medal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MedalID)

        <div class="form-group">
            @Html.LabelFor(model => model.AthleteID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.AthleteID, new SelectList(ViewBag.Athlete, "AthleteID", "Name", Model.AthleteID), "Select an Athlete", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AthleteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SportID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SportID, new SelectList(ViewBag.Sports, "SportID", "SportName"), "Select a Sport", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SportID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MedalType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.MedalType, new SelectList(new[] { "Gold", "Silver", "Brown" }), "Select a Medal", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MedalType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateAwarded, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateAwarded, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateAwarded, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn btn-danger" />

            <form asp-action="Index" method="get" style="display: inline;">
                <button type="submit" class="btn btn-secondary">Back to List</button>
            </form>
        </div>
    </div>
}




