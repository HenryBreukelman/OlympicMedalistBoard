@model OlympicMedalistBoard.Models.Medal

@{
    ViewData["Title"] = "Delete Medals";
}

<div class="d-flex d-flex justify-content-center align-items-center pb-4">
    <h3 class="my-4 text-info">@ViewData["Title"]</h3>
</div>

<div class="text-center">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>Athlete</dt>
            <dd>@Html.DisplayFor(model => model.Athlete.Name)</dd>

            <dt>Sport</dt>
            <dd>@Html.DisplayFor(model => model.Sport.SportName)</dd>

            <dt>Medal Type</dt>
            <dd>@Html.DisplayFor(model => model.MedalType)</dd>

            <dt>Date Awarded</dt>
            <dd>@Html.DisplayFor(model => model.DateAwarded)</dd>
        </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MedalID)
                @* <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div> *@
                <div class="d-flex mt-5 justify-content-center">
                    <button type="submit" class="btn btn-outline-danger sbtn">Delete</button>
                    <a class="btn btn-outline-secondary sbtn mx-2" href="@Url.Action("Index")">Back to List</a>
                </div>
            }



    </div>
</div>




