@model OlympicMedalistBoard.Models.Medal

<h2>Delete Medal</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Medal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Athlete
        </dt>
        <dd class="col-sm-10">
            @Model.Athlete.Name
        </dd>
        <dt class="col-sm-2">
            Sport
        </dt>
        <dd class="col-sm-10">
            @Model.Sport.SportName
        </dd>
        <dt class="col-sm-2">
            Medal Type
        </dt>
        <dd class="col-sm-10">
            @Model.MedalType
        </dd>
        <dt class="col-sm-2">
            Date Awarded
        </dt>
        <dd class="col-sm-10">
            @Model.DateAwarded
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="MedalID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

