@model IEnumerable<OlympicMedalistBoard.Models.Medal>

@{
    ViewData["Title"] = "Medals";
}

<div class="d-flex d-flex justify-content-center align-items-center position-relative pb-4" style="margin:0 0 40px 0">
    <h3 class="my-4 text-info">@ViewData["Title"]</h3>
    <a href="@Url.Action("Create")" class="btn btn-outline-success position-absolute" style="bottom:-20px;"> + </a>
</div>

<table class="table ps-0">
    <thead>
        <tr class="p-3 d-flex mb-2 align-items-center bg-light">
            <th>
                <b>@Html.DisplayNameFor(model => model.Athlete.Name)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Sport.SportName)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.MedalType)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.DateAwarded)</b>
            </th>
            <th>
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="p-3 d-flex align-items-center mb-2">
                <td>
                    @item.Athlete.Name
                </td>
                <td>
                    @item.Sport.SportName
                </td>
                <td>
                    @item.MedalType
                </td>
                <td>
                    @item.DateAwarded.ToString("dd/MM/yyyy")
                </td>
                <td class="btn-group">
                    <a class="btn btn-outline-success bi bi-pencil" href="@Url.Action("Edit", new { id = item.MedalID })"></a>
                    @* <a class="btn btn-outline-info bi bi-info-circle" href="@Url.Action("Details", new { id = item.MedalID })"></a> *@
                    <a class="btn btn-outline-danger bi bi-trash3" href="@Url.Action("Delete", new { id = item.MedalID })"></a>
                </td>
            </tr>
        }
    </tbody>
</table>



